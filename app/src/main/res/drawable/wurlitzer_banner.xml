<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main olive/gold gradient background matching Wurlitzer 200A aesthetic -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#8B7355"
                android:centerColor="#A08060"
                android:endColor="#8B7355"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle vertical gradient overlay for depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#20FFFFFF"
                android:endColor="#20000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Thin white line accent at top (like the Wurlitzer control panel) -->
    <item
        android:top="40dp"
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#30FFFFFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
